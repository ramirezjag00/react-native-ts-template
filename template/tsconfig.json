// prettier-ignore
{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react-native",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": ["react-native", "jest"],
    "paths": {
      "@api": ["api/*"],
      "@assets/*": ["assets/*"],
      "@common/*": ["common/*"],
      "@components/*": ["common/components/*"],
      "@constants/*": ["common/constants/*"],
      "@features/*": ["features/*"],
      "@hooks/*": ["common/hooks/*"],
      "@navigation/*": ["navigation/*"],
      "@state/*": ["state/*"],
      "@themes": ["common/constants/themes"],
      "@types/*": ["common/types/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "exclude": [
    "babel.config.js", "jest.config.js", "metro.config.js", "node_modules"
  ]
}

